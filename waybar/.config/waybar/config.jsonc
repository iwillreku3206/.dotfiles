{
  "layer": "top",
  "position": "top",
  "height": 26,
  "spacing": 6,

  "modules-left": [
    "sway/workspaces",
    "disk"
  ],

  "modules-right": [
    "tray",
    "mpris",
    "pulseaudio",
    "cpu",
    "memory",
    "clock"
  ],

  "sway/workspaces": {
    "disable-scroll": false,
    "all-outputs": false,
    "format": "{name}"
  },

  "disk": {
    "interval": 25,
    "format": "{path} {percentage_used}%",
    "path": "/"
  },

  "tray": {
    "spacing": 6
  },

  "mpris": {
    "format": "{player_icon} {artist} - {title}",
    "format-paused": "{status_icon} {artist} - {title}",
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ",
      "spotify": "ÔÜº",
      "firefox": "Ôâ©"
    },
    "status-icons": {
      "paused": "‚è∏"
    },
    "max-length": 30
  },

  "pulseaudio": {
    "format": "V:{volume}%",
    "format-muted": "üîá",
    "scroll-step": 5
  },

  "cpu": {
    "interval": 2,
    "format": "C:{usage}%"
  },

  "memory": {
    "interval": 2,
    "format": "R:{percentage}%"
  },

  "clock": {
    "interval": 1,
    "format": "{:%Y/%m/%d %H:%M:%S}"
  }
}
