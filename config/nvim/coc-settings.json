{
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    },
    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gd", "gdscript3"],
      "port": 6008
    }
  },
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.format.enable": true,
  "eslint.autoFixOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": ["typescriptreact", "typescript", "javascript", "javascriptreact", "html"],
  "clangd.fallbackFlags": ["-xc++"],
  "Lua.diagnostics.globals": ["vim"]
}
