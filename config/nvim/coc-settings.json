      "command": "astro-ls",
      "args": ["--stdio"],
      "filetypes": ["astro"],
      "env": {
        "environment": "node",
      },
      "initializationOptions": {
        "typescript": {
          "serverPath": "/home/rek/.nvm/versions/node/v17.8.0/bin/tsserver"
